{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "webpack",
    "webpackConfigPath": "webpack.config.js",
    "assets": [
      {
        "include": "../generated",
        "outDir": "dist/generated",
        "watchAssets": true
      }
    ]
  },
  "generateOptions": {
    "path": "src/modules"
  }
}
